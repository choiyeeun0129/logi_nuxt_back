<!--	작업지시 Tab - 작업지시 모의전개 버튼 누른 후 - 실제 작업 지시 버튼-->
	<parameterMap type="map" id="workOrderParameter">
		<parameter property="mrpGatheringNo" javaType="java.lang.String" jdbcType="VARCHAR" mode="IN" />
